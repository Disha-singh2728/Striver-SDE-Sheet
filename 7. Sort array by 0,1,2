#include <bits/stdc++.h> 
void sort012(int *arr, int n)
{   
    // take a count of no. of 0 , 1 and 2 in array
     int count0=0,count1=0,count2=0,i;
    for(int i=0;i<n;i++){
    switch(arr[i]){
    case 0:
     count0++;
     break;
    case 1:
     count1++;
     break;
    case 2:
     count2++;
     break;}
    }
    i=0;
    while(count0--)
     arr[i++]=0;
    while(count1--)
      arr[i++]=1;
    while(count2--)
     arr[i++]=2;
    }
